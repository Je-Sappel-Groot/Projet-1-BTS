<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contacts</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <%- include('../partials/navbar'); %>

  <div class="container my-5">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
      <div>
        <h1 class="section-title mb-1">Contacts</h1>
        <p class="section-subtitle mb-0">Demandes et messages recus.</p>
      </div>
      <a href="/contacts/ajouter" class="btn btn-accent">Nouveau contact</a>
    </div>

    <div class="card lift-card p-3">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Message</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (!contacts || !contacts.length) { %>
            <tr><td colspan="4" class="text-center">Aucun contact</td></tr>
          <% } %>
          <% contacts.forEach(contact => { %>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.email %></td>
              <td><%= contact.message %></td>
              <td>
                <a href="/contacts/modifier/<%= contact.id %>" class="btn btn-outline-dark btn-sm">Modifier</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <%- include('../partials/footer'); %>
  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
