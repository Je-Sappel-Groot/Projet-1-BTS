<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Modifier un contact</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <%- include('../partials/navbar'); %>

  <div class="container my-5">
    <div class="card lift-card p-4">
      <h1 class="section-title">Modifier un contact</h1>

      <form id="modifierForm">
        <div class="mb-3">
          <label class="form-label">Nom</label>
          <input type="text" class="form-control" id="name" value="<%= contact.name %>">
        </div>
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" class="form-control" id="email" value="<%= contact.email %>">
        </div>
        <div class="mb-3">
          <label class="form-label">Message</label>
          <textarea class="form-control" id="message" rows="4"><%= contact.message %></textarea>
        </div>
        <button type="submit" class="btn btn-accent">Enregistrer</button>
      </form>

      <div id="result" class="mt-3"></div>
    </div>
  </div>

  <script>
    const form = document.getElementById('modifierForm');
    const result = document.getElementById('result');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const payload = {
        name: document.getElementById('name').value,
        email: document.getElementById('email').value,
        message: document.getElementById('message').value
      };

      try {
        const res = await fetch(`/api/contacts/<%= contact.id %>`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });
        const data = await res.json();
        if (!res.ok) throw new Error(data.message || 'Erreur serveur');
        result.innerHTML = '<div class="alert alert-success">Contact mis a jour.</div>';
      } catch (err) {
        result.innerHTML = `<div class="alert alert-danger">Erreur : ${err.message}</div>`;
      }
    });
  </script>

  <%- include('../partials/footer'); %>
  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
